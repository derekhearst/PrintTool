<Window x:Class="PitCrewUltimateByDerekHearst.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PitCrewUltimateByDerekHearst"
        mc:Ignorable="d"
        Title="PitCrew Ultimate by Derek Hearst" Height="463" Width="800">
    <Grid Margin="0,0,0,1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.ColumnSpan="2">
            <TabItem Header="Update Firmware">
                <Grid Background="#FFE5E5E5">
                    <TabControl Loaded="loadJediFWList">
                        <TabItem Header="JEDI">
                            <Grid>
                                <ComboBox x:Name="jediYear" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0"/>
                                <ComboBox HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Width="120"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Yolo">
                            <Grid Margin="0,0,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="185*"/>
                                    <RowDefinition Height="153*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="97*"/>
                                    <ColumnDefinition Width="639*"/>
                                    <ColumnDefinition Width="19*"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="yoloProductSelection" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="245" SelectedIndex="1" IsReadOnly="True" Height="22" Grid.ColumnSpan="2" SelectionChanged="grabYoloFirmware" Loaded="grabYoloFirmware">
                                    <ComboBoxItem Content="yoshino_dist"/>
                                    <ComboBoxItem Content="lochsa_dist"/>
                                </ComboBox>
                                <ComboBox x:Name="yoloFWDateSelector" HorizontalAlignment="Left" Margin="10,93,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0" Height="22" Grid.ColumnSpan="2">
                                </ComboBox>
                                <Label Content="Select your product." HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top" Width="301" Height="26" Grid.ColumnSpan="2"/>
                                <Label Content="Selection your firmware version." HorizontalAlignment="Left" Margin="10,62,0,0" VerticalAlignment="Top" Height="26" Width="185" Grid.ColumnSpan="2"/>
                                <ComboBox x:Name="yoloFWSelect" HorizontalAlignment="Left" Margin="38,93,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0" Height="22" Grid.Column="1">
                                    <ComboBoxItem Content="assert"/>
                                    <ComboBoxItem Content="nonassert"/>
                                    <ComboBoxItem Content="signable_assert"/>
                                </ComboBox>
                                <Button x:Name="yoloInstallButton" Content="Download &amp; send" HorizontalAlignment="Left" Margin="10,102,0,0" VerticalAlignment="Top" Click="yoloUpdateButton" Height="20" Width="245" Grid.ColumnSpan="2" Grid.Row="1"/>
                                <Button Content="Cancel&#xD;&#xA;" HorizontalAlignment="Left" Margin="171,102,0,0" VerticalAlignment="Top" Click="usbSendDestroy" Height="20" Grid.Column="1" Grid.Row="1"/>
                                <ScrollViewer Margin="281,10,10,10" Grid.ColumnSpan="2" Grid.Column="1" Grid.RowSpan="2">
                                    <TextBox x:Name="yoloTBLogs" Text="Log:" TextWrapping="Wrap" RenderTransformOrigin="0.5,0.5" Margin="5,5,5,5" SelectionOpacity="0" Background="{x:Null}" BorderBrush="{x:Null}" IsReadOnly="True" SelectionBrush="{x:Null}" FontSize="10"/>
                                </ScrollViewer>
                                <Border BorderThickness="1" BorderBrush="Black" Margin="281,10,10,10" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="DUNE">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="25*"/>
                                    <ColumnDefinition Width="369*"/>
                                </Grid.ColumnDefinitions>
                                <ScrollViewer Margin="379,10,10,10" Grid.Column="1">
                                    <TextBox x:Name="duneTBLogs" Text="Log:" TextWrapping="Wrap" RenderTransformOrigin="0.5,0.5" Margin="5,5,5,5" SelectionOpacity="0" Background="{x:Null}" BorderBrush="{x:Null}" IsReadOnly="True" SelectionBrush="{x:Null}" FontSize="10"/>
                                </ScrollViewer>
                                <Border BorderThickness="1" BorderBrush="Black" Margin="379,10,10,10" Grid.Column="1"/>
                                <ComboBox x:Name="duneVSelect" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="306" IsEditable="True" SelectedIndex="0" DropDownOpened="grabDuneRevison" Grid.ColumnSpan="2"/>
                                <Label Content="Select firmware Version" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                                <Label Content="Select Hardware Model" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                                <ComboBox x:Name="duneHWModelBox" HorizontalAlignment="Left" Margin="10,99,0,0" VerticalAlignment="Top" Width="306" DropDownOpened="grabDuneProduct" Grid.ColumnSpan="2"/>
                                <Button x:Name="duneInstallButton" Content="Download &amp; Install" HorizontalAlignment="Left" Margin="10,252,0,0" VerticalAlignment="Top" Width="247" Click="duneUpdateButton" Grid.ColumnSpan="2"/>
                                <Button Content="Cancel&#xD;&#xA;" HorizontalAlignment="Left" Margin="227,252,0,0" VerticalAlignment="Top" Click="usbSendDestroy" Height="20" Grid.Column="1"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="Logs">
                <Grid Background="#FFE5E5E5">
                    <TabControl>
                        <TabItem Header="Setup Connections">
                            <Grid>
                                <TextBox HorizontalAlignment="Left" Margin="77,70,0,0" Text="255.255.255.255" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                                <TextBox HorizontalAlignment="Left" Margin="77,93,0,0" Text="255.255.255.255" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                                <TextBlock HorizontalAlignment="Left" Margin="10,70,0,0" Text="IP of Device" TextWrapping="Wrap" VerticalAlignment="Top"/>
                                <TextBlock HorizontalAlignment="Left" Margin="10,94,0,0" Text="IP of Dart" TextWrapping="Wrap" VerticalAlignment="Top"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Log Upload">
                            <Grid/>
                        </TabItem>
                        <TabItem Header="Log Output">
                            <TextBlock x:Name="mainLogBlock" Text="Test" />
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
