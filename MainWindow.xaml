<Window x:Class="PrintTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrintTool"
        mc:Ignorable="d"
        Title="PrintTool by Derek Hearst" Height="512" Width="839" ContentRendered="StartupTasks" ResizeMode="CanResize" SizeToContent="Manual" Closing="EndTask">

    <TabControl>
        <TabItem Header="Connections">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.75*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <GroupBox Header="Connections" Grid.Column="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height=".75*"/>
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Printer model ->" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right"/>
                            <TextBox Name="modelEntry" Text="" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center"/>

                            <Label Content="IP of the printer  ->" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right"/>
                            <TextBox Name="ipEntry" Text="255.255.255.255" Grid.Row="1" Grid.Column="2" TextChanged="PrinterIPBox" VerticalAlignment="Center" />

                            <CheckBox Name="dartEnabled" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Label Content="Dart ip ->" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right"/>
                            <TextBox Name="ipDartEntry" Text="255.255.255.255" Grid.Row="2" Grid.Column="2" TextChanged="DartIPBox" VerticalAlignment="Center"/>

                            <CheckBox Name="bashEnabled" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Label Content="Bash com port ->" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right"/>
                            <ComboBox Name="bashCom" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center">

                            </ComboBox>


                        </Grid>
                        <Grid Grid.Row="1">
                            
                        </Grid>
                    </Grid>
                    
                </GroupBox>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height=".1*"/>
                    </Grid.RowDefinitions>
                    <GroupBox Header="Saved Configs" Grid.Row="0">
                        <ListBox Name="SavedConnectionConfigs"/>
                    </GroupBox>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Content="Save" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Grid.Column="0" Click="SaveDefaults"/>
                        <Button Content="Load" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Grid.Column="1" Click="LoadDefaults"/>
                    </Grid>
                </Grid>
            </Grid>
        </TabItem>
        <TabItem x:Name="firmwareTab" Header="Firmware">
            <TabControl>
                <TabItem Header="JEDI">
                    <Grid>
                        <ComboBox x:Name="jediYear" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0"/>
                        <ComboBox HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Width="120"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Yolo">
                    <Grid>
                        <ComboBox x:Name="yoloProductSelection" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="300" SelectedIndex="1" IsReadOnly="True" Height="22">
                            <ComboBoxItem Content="yoshino_dist"/>
                            <ComboBoxItem Content="lochsa_dist"/>
                        </ComboBox>
                        <ComboBox x:Name="yoloFWDateSelector" HorizontalAlignment="Left" Margin="10,99,0,0" VerticalAlignment="Top" Width="150" SelectedIndex="0" Height="22"/>
                        <Label Content="Select your product." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="301" Height="26"/>
                        <Label Content="Selection your firmware version." HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" Height="26" Width="185"/>
                        <ComboBox x:Name="yoloFWSelect" HorizontalAlignment="Left" Margin="166,99,0,0" VerticalAlignment="Top" Width="145" SelectedIndex="0" Height="22">
                            <ComboBoxItem Content="assert"/>
                            <ComboBoxItem Content="nonassert"/>
                            <ComboBoxItem Content="signable_assert"/>
                            <ComboBoxItem Content="nonassert/signed"/>
                        </ComboBox>
                        <Button x:Name="yoloInstallButton" Content="Download &amp; send" HorizontalAlignment="Left" Margin="10,368,0,0" VerticalAlignment="Top" Click="yoloUpdateButton" Height="50" Width="245"/>
                        <Button Content="Cancel&#xA;" HorizontalAlignment="Left" Margin="260,368,0,0" VerticalAlignment="Top" Click="usbSendDestroy" Height="50" Width="50"/>
                        <Border BorderThickness="1" BorderBrush="Black" Margin="367,10,10,10">
                            <ScrollViewer>
                                <TextBox x:Name="yoloTBLogs" Text="Log:" TextWrapping="Wrap" IsReadOnly="True"  FontSize="10"/>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </TabItem>
                <TabItem Header="DUNE">
                    <Grid>
                        <Border BorderThickness="1" BorderBrush="Black" Margin="367,10,10,10">
                            <ScrollViewer>
                                <TextBox x:Name="duneTBLogs" Text="Log:" TextWrapping="Wrap" IsReadOnly="True"  FontSize="10"/>
                            </ScrollViewer>
                        </Border>
                        <ComboBox x:Name="duneVSelect" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="306" IsEditable="True" SelectedIndex="0" />
                        <Label Content="Select firmware Version" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                        <Label Content="Select Hardware Model" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top"/>
                        <ComboBox x:Name="duneHWModelBox" HorizontalAlignment="Left" Margin="10,99,0,0" VerticalAlignment="Top" Width="306" DropDownOpened="grabDuneProduct" />
                        <Button x:Name="duneInstallButton" Content="Download &amp; Install" HorizontalAlignment="Left" Margin="10,368,0,0" VerticalAlignment="Top" Width="245" Click="duneUpdateButton" Height="50"/>
                        <Button Content="Cancel&#xA;" HorizontalAlignment="Left" Margin="260,368,0,0" VerticalAlignment="Top" Click="usbSendDestroy" Height="50" Width="50"/>
                    </Grid>
                </TabItem>
            </TabControl>

        </TabItem>
        <TabItem x:Name="logTab" Header="Logs">
            <TabControl>
                <TabItem Header="Log Upload">
                    <Grid/>
                </TabItem>
                <TabItem Header="Log Output">
                    <TextBlock x:Name="mainLogBlock" Text="Test" />
                </TabItem>
            </TabControl>
        </TabItem>
        <TabItem Header="Print">
            <Grid>
                <Border BorderThickness="1" BorderBrush="Black" Margin="474,10,10,10">
                    <Button Content="Send File by 9100" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,9,0,0" Width="290" Click="SendBy9100"/>
                </Border>
            </Grid>
        </TabItem>
        <TabItem Header="Tests">
            <Grid>

            </Grid>
        </TabItem>
    </TabControl>

</Window>
