<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <StartupObject>PrintTool.App</StartupObject>
    <ApplicationIcon>favicon.ico</ApplicationIcon>
    <Win32Resource />
    <Product>PrintTool</Product>
    <Authors>Derek Hearst</Authors>
    <Company>derekhearst.com</Company>

    <AssemblyName>PrintTool</AssemblyName>
    <RootNamespace>PrintTool</RootNamespace>
    <MinimumPlatformVersion>10.0.17763.0</MinimumPlatformVersion>
    <DebugType>embedded</DebugType>
    <ErrorReport>send</ErrorReport>
    <Description>Log gatherer and print job generator.</Description>
    <PackageProjectUrl>https://derekhearst.com/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/derekhearst/PrintTool</RepositoryUrl>
    <Version>1.0.0</Version>
    <Configurations>Debug;Release;DebugFromShare</Configurations>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <NoWarn />
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Data\template.ps" />
    <None Remove="Data\template.txt" />
    <None Remove="favicon.ico" />
    <None Remove="Services\dart.exe" />
    <None Remove="Services\HP.Platform.Tools.ErrorLookup.exe" />
    <None Remove="Services\QScanWS.exe" />
    <None Remove="Services\USBSend.exe" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SerialPortStream" Version="2.3.1" />
    <PackageReference Include="SharpIpp" Version="0.9.0" />
    <PackageReference Include="Telnet" Version="0.8.6" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Data\template.ps">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Data\template.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="favicon.ico">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Services\dart.exe">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Services\HP.Platform.Tools.ErrorLookup.exe">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Services\QScanWS.exe">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Services\USBSend.exe">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="code\Settings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>Settings.settings</DependentUpon>
    </Compile>
    <Compile Update="Settings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>Settings.settings</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="code\Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
    <None Update="Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>

</Project>
