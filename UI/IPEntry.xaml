<Window x:Class="PrintTool.IPEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrintTool"
        mc:Ignorable="d"
        Title="Input IP Address" Height="251" Width="507" Style="{DynamicResource CustomWindowStyle}" Background="#FF232323" BorderBrush="#FF343434" Foreground="#FFEBEBEB">
	<DockPanel>
		<StackPanel Margin="20,60,20,0" DockPanel.Dock="Top">
			<TextBox x:Name="ipaddress" Text="Input IP Address Here" DockPanel.Dock="Top" HorizontalAlignment="Center"  Width="300" GotKeyboardFocus="ipaddress_GotKeyboardFocus" FontSize="24"/>
		</StackPanel>
		<StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="20">
			<Button x:Name="cancelButton" Content="Cancel" Margin="10"  Width="100" Height="40" Click="cancelButton_Click" IsCancel="True"/>
			<Button x:Name="doneButton" Content="Done" Margin="10" Width="100" Height="40" Click="doneButton_Click" IsDefault="True"/>
		</StackPanel>
	</DockPanel>
</Window>
